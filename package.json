{
  "name": "vite-incra",
  "version": "0.1.5",
  "description": "Correct incremental build for Vite: content hashing, dependency graph, parent invalidation",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    }
  },
  "bin": {
    "vite-incra": "lib/bin/vite-incra.js"
  },
  "files": [
    "lib",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf lib && tsc && chmod +x lib/bin/vite-incra.js",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nnolan-oss/vite-incra.git"
  },
  "keywords": [
    "vite",
    "incremental",
    "build"
  ],
  "author": "github/3nln",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=18"
  },
  "bugs": {
    "url": "https://github.com/nnolan-oss/vite-incra/issues"
  },
  "homepage": "https://github.com/nnolan-oss/vite-incra#readme",
  "devDependencies": {
    "@types/node": "^20.14.9",
    "rimraf": "^6.1.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "fast-glob": "^3.3.3",
    "vite": "^7.2.4"
  }
}