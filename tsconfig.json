{
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"outDir": "lib",
		"rootDir": "src",
		"target": "esnext",
		"strict": true,
		"noImplicitAny": true,
		"declaration": true,
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "bundler"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**/*", "example/**/*"]
}
